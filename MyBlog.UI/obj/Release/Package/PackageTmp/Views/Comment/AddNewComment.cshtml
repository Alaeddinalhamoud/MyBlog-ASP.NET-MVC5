@model MyBlog.Domain.Model.Comment

@{
    ViewBag.Title = "AddNewComment";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}
<div class="container body-content-pages ">
   

    @using (Html.BeginForm("AddNewComment", "Comment", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Comment</h4>
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Comment_Content, new { @class = "ckeditor" })
                    @Html.ValidationMessageFor(model => model.Comment_Content, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Create_time, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.PostId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.CommentId, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

           

            

           

            <div class="form-group">
                <div class="col-md-12 input-group">
                    <button type="submit" class="btn btn-primary" aria-label="Left Align">
                        <span class="fa fa fa-pencil-square-o" aria-hidden="true"> </span> Publish
                    </button>
                </div>
            </div>
        </div>
    }

   
    </div>